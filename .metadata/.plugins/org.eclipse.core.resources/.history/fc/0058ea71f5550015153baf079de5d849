package gui;

import java.awt.BorderLayout;

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.JTextPane;

public class InloggningsFrame extends JFrame {

	public InloggningsFrame(){
		super("Inloggning");
		setSize(400, 270);
		setLocationRelativeTo(null);
		setDefaultCloseOperation( JFrame.DISPOSE_ON_CLOSE );
		setResizable(false);
		
		add(new InloggningsUppgiftsPanel(), BorderLayout.CENTER); // L채gg till Panelen med textf채lt
		
		//L채gg till "Logga in" knappen
		JButton btnLoggaIn = new JButton();
		btnLoggaIn.setText("Logga in");
		add(btnLoggaIn, BorderLayout.SOUTH);
		
        //pack();
		setVisible(true);
	}
	
	private class InloggningsUppgiftsPanel extends JPanel{
		public InloggningsUppgiftsPanel(){
			setSize(800, 600);
			setLayout(new BoxLayout(this, BoxLayout.Y_AXIS));
			
			//Anv채ndarnamn
			JTextPane tpNamn = new JTextPane();
			tpNamn.setText("Namn");
			textPaneInit(tpNamn);
			JTextField tfNamn = new JTextField();
			textFieldInit(tfNamn);
		}
	}
	
}
