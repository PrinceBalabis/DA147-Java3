package p2;

public class Cheater extends Player{
	private PredictableDice predictableDice;

	public Cheater(String name) {
		super(name);
		predictableDice = new PredictableDice();
	}

	public Cheater(String name, Dice dice) {
		super(name);
		predictableDice = new PredictableDice(dice.getSides());
	}

	@Override
	public int throwDice() {
		return predictableDice.throwDice();
	}

	public void setDice(Dice dice) {
		predictableDice = new PredictableDice(dice.getSides());;
	}

	public Dice getDice() {
		Dice tempDice = new SimpleDice(predictableDice.getSides());
		return tempDice;
	}

	public static void main(String[] args) {
		Player player1 = new OrdinaryPlayer( "Viktor",new SimpleDice(6) );
		Player player2 = new Cheater( "Signe", new SimpleDice(6) );
		Game game = new Game( player1, player2 );
		System.out.println( "\nResultatet av tio spel" );
		for( int i=0; i<10; i++ )
			game.play( false );
	}

}
