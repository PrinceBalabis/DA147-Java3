package gui;

import java.awt.BorderLayout;

import javax.swing.JButton;
import javax.swing.JFrame;

public class InloggningsFrame extends JFrame {

	public InloggningsFrame(){
		super("Inloggning");
		setSize(400, 270);
		setLocationRelativeTo(null);
		setDefaultCloseOperation( JFrame.DISPOSE_ON_CLOSE );
		setResizable(false);
		
		add(new KundRegistreringsPanel(), BorderLayout.CENTER); // Lägg till Panelen med textfält
		
		//Lägg till "Logga in" knappen
		JButton btnRegistrera = new JButton();
		btnRegistrera.setText("Logga in");
		add(btnRegistrera, BorderLayout.SOUTH);
		
        //pack();
		setVisible(true);
	}
	
}
