package p2;
/**
 * Klassen implementerar Dice. Tärningskasten är förutsägbara genom att ett kast 
 * alltid är ett större än föregående. Enda undantaget från denna regel är om 
 * förra kastet visade största antalet prickar. Då kommer kastet att visa en prick.
 * @author Prince Balabis, AB7271
 */

public class SimpleDice implements Dice{
	private int sides;
	
	public SimpleDice(){
		sides = 6;
		
	}
	
	public SimpleDice(int sides){
		if(sides < 1)
				throw new NegativeSidesException("Tärningen måste ha minst 1 sida: "+sides);
		this.sides = sides;
	}
	
	@Override
	public int throwDice() {
		return (int)(Math.random()*sides+1);
	}

	@Override
	public int getSides() {
		return sides;
	}
	
	// Test of this class
	public static void main(String[] args){
		SimpleDice simpledice = new SimpleDice();
		System.out.println(simpledice.throwDice());
	}
	

}
