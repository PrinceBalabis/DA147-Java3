package p1;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Input {
	private Controller controller;
	
	public Input(Controller controller){
		this.controller = controller;
		
		JFrame frame = new JFrame("Ny bok");
		
		JLabel titleL = new JLabel("Titel");
		JLabel authorL = new JLabel("FÃ¶rfattare");
		JLabel isbnL = new JLabel("ISBN");
		
		JTextArea titleTF = new JTextArea();
		titleTF.setPreferredSize(new Dimension(500, 20));
		JTextArea authorTF = new JTextArea();
		authorTF.setPreferredSize(new Dimension(500, 20));
		JTextArea isbnTF = new JTextArea();
		isbnTF.setPreferredSize(new Dimension(500, 20));

		GridLayout gridLayout = new GridLayout(3,2);
		frame.setLayout(gridLayout);
		frame.add(titleL);
		frame.add(titleTF);
		
		frame.add(authorL);
		frame.add(authorTF);
		
		frame.add(isbnL);
		frame.add(isbnTF);

		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(new Dimension(400, 200));
		frame.setVisible(true);

	}
}
